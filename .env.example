# 資料庫設定
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_DATABASE=automation_plan

# API 服務設定
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False
API_LOG_LEVEL=info

# JWT 認證設定
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 瀏覽器設定
HEADLESS_BROWSER=True

# 其他設定
DEBUG=False
LOG_LEVEL=INFO
CORS_ORIGINS=*

# 任務設定
TASK_DELAY_MIN=5
TASK_DELAY_MAX=15
MAX_CONCURRENT_TASKS=5
